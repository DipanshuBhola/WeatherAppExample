<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/result_activity_item_spacing"
    tools:context="com.assignment.weatherappexample.WeatherResultsActivity" >
    
    <LinearLayout
        android:id="@+id/user_inputs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" > 
            
        <TextView 
        	android:id="@+id/current_weather_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_activity_hint_text_height"
            android:padding="@dimen/result_activity_item_spacing"
            android:layout_marginBottom="@dimen/result_activity_item_spacing"
            android:gravity="center"
            android:text="Choose location to get current weather information"
            style="@style/hintTextStyle"
            android:background="@android:color/holo_blue_light" />
          
		<Spinner
	    	android:id="@+id/current_weather_support_entries"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content" /> 
            
	</LinearLayout> 
	
    <RelativeLayout 
        android:id="@+id/current_weather_data_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/user_inputs_layout" >
        
        
    </RelativeLayout>
    
    
</RelativeLayout>
